{
    "openapi": "3.0.0",
    "info": {
        "title": "Schedules Documentation API interface",
        "description": "Schedules API Interface",
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/me/profile": {
            "get": {
                "tags": [
                    "Perfil de usuário"
                ],
                "summary": "Informações do perfil de usuário",
                "operationId": "c4e62d8a7d28bd000f28e0eda3c1d210",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProfileResponse"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "Perfil de usuário"
                ],
                "summary": "Atualizando um perfil",
                "operationId": "83f1bc29023080d59867909a2f6fbf5a",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProfileResponse"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Perfil de usuário"
                ],
                "summary": "Criando um perfil",
                "operationId": "e5f8aef727338c6ddd78fde1fe0b58cc",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProfileRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProfileResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/me": {
            "get": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Usuário autenticado",
                "operationId": "20cb56b105e60774b2ee529fa3d8737a",
                "responses": {
                    "200": {
                        "description": "Retorna o usuário autenticado atualmente(Cookie/Authorization)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponse"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "O User-Access Token não esta presente no request header ou cookie"
                    },
                    "401": {
                        "description": "O usuário não esta com uma conta logada"
                    }
                }
            }
        },
        "/api/v1/auth/login": {
            "post": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Autenticar um usuário",
                "operationId": "97d0fa1f733dead1980e640104204374",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login de usuario feito com succeso"
                    },
                    "400": {
                        "description": "Erros de validação"
                    }
                }
            }
        },
        "/api/v1/register": {
            "post": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Registrar novo usuário",
                "operationId": "6a59abd9cd73a27f95e6d2936c7f6fcf",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RegisterRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário registrado com sucesso"
                    },
                    "400": {
                        "description": "Erros de validação"
                    }
                }
            }
        },
        "/api/v1/services": {
            "get": {
                "tags": [
                    "Serviços"
                ],
                "summary": "Listagem de serviços",
                "operationId": "934e08fdab8ea421640b9f1a621fb010",
                "responses": {
                    "200": {
                        "description": "Retorna a lista de serviços disponiveis na plataforma, criada por usuários.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ServiceResponse"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/services/{serviceId}": {
            "get": {
                "tags": [
                    "Serviços"
                ],
                "summary": "Informações de um serviço",
                "operationId": "056e8e781ef94a68091dddf86b80dc35",
                "parameters": [
                    {
                        "name": "serviceId",
                        "in": "path",
                        "description": "Id do serviço para buscar",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ServiceResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/services/{serviceId}/schedules": {
            "get": {
                "tags": [
                    "Serviços"
                ],
                "summary": "Informações de um horario",
                "operationId": "541e117da8ca150470dc4318c2a4a06f",
                "parameters": [
                    {
                        "name": "serviceId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ScheduleResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "api/v1/services/{serviceId}/{scheduleId}": {
            "post": {
                "tags": [
                    "Serviços"
                ],
                "summary": "Agendar um serviço(Em produção)",
                "operationId": "bb256325c1831baafad85f0790bfba49",
                "parameters": [
                    {
                        "name": "serviceId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "scheduleId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "required": [
                                        "name"
                                    ],
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "AccountRequest": {
                "title": "Request-Body Tipo de conta",
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "description": "Tipo de conta: customer, service ou enterprise",
                        "type": "string",
                        "enum": [
                            "customer",
                            "service",
                            "enterprise"
                        ],
                        "example": "customer"
                    }
                },
                "type": "object"
            },
            "AddressRequest": {
                "title": "Request-Body Endereço",
                "required": [
                    "state",
                    "city"
                ],
                "properties": {
                    "default": {
                        "description": "Se este é o endereço padrão do usuário",
                        "type": "boolean",
                        "example": true
                    },
                    "state": {
                        "description": "Estado (UF) obrigatório",
                        "type": "string",
                        "maxLength": 3,
                        "minLength": 2,
                        "example": "SP"
                    },
                    "city": {
                        "description": "Nome da cidade (obrigatório)",
                        "type": "string",
                        "maxLength": 30,
                        "minLength": 3,
                        "example": "São Paulo"
                    },
                    "address": {
                        "description": "Endereço completo",
                        "type": "string",
                        "maxLength": 120,
                        "example": "Avenida Paulista, 1578"
                    },
                    "street": {
                        "description": "Nome da rua",
                        "type": "string",
                        "maxLength": 120,
                        "example": "Rua das Flores"
                    },
                    "neighborhood": {
                        "description": "Nome do bairro",
                        "type": "string",
                        "maxLength": 120,
                        "example": "Bela Vista"
                    },
                    "number": {
                        "description": "Número do imóvel (string por flexibilidade)",
                        "type": "string",
                        "example": "42A"
                    }
                },
                "type": "object"
            },
            "LoginRequest": {
                "title": "Request-Body Login",
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "description": "Endereço de e-mail válido cadastrado",
                        "type": "string",
                        "format": "email",
                        "example": "usuario@example.com"
                    },
                    "password": {
                        "description": "Senha com no mínimo 6 caracteres",
                        "type": "string",
                        "format": "password",
                        "minLength": 6,
                        "example": "senhaSegura123"
                    }
                },
                "type": "object"
            },
            "ProfileRequest": {
                "title": "Request-Body Perfil",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "description": "Nome completo do usuário (obrigatório)",
                        "type": "string",
                        "minLength": 2,
                        "example": "João Silva"
                    },
                    "bio": {
                        "description": "Biografia ou descrição do usuário (opcional)",
                        "type": "string",
                        "maxLength": 1500,
                        "example": "Sou um profissional dedicado com anos de experiência..."
                    },
                    "avatar": {
                        "description": "URL do avatar do usuário (opcional)",
                        "type": "string",
                        "format": "url",
                        "example": "https://example.com/avatar.jpg"
                    },
                    "phone": {
                        "description": "Telefone de contato (opcional)",
                        "type": "string",
                        "example": "+55 11 91234-5678"
                    }
                },
                "type": "object"
            },
            "RegisterRequest": {
                "title": "Request-Body Registro",
                "required": [
                    "username",
                    "email",
                    "password"
                ],
                "properties": {
                    "username": {
                        "description": "Nome de usuário único, começando com letra minúscula, pode conter números, '.' e '_'",
                        "type": "string",
                        "pattern": "^[a-z][a-z0-9]*(?:[._][a-z0-9]+)*$",
                        "example": "usuario123"
                    },
                    "email": {
                        "description": "Endereço de email único e válido",
                        "type": "string",
                        "format": "email",
                        "example": "usuario@example.com"
                    },
                    "password": {
                        "description": "Senha com no mínimo 6 caracteres",
                        "type": "string",
                        "format": "password",
                        "minLength": 6,
                        "example": "senhaSegura123"
                    }
                },
                "type": "object"
            },
            "SchedulesRequest": {
                "title": "Request-Body Disponibilidade",
                "required": [
                    "day_of_week",
                    "start_time",
                    "end_time"
                ],
                "properties": {
                    "day_of_week": {
                        "description": "Dia da semana (em inglês, obrigatório)",
                        "type": "string",
                        "enum": [
                            "monday",
                            "tuesday",
                            "wednesday",
                            "thursday",
                            "friday",
                            "saturday",
                            "sunday"
                        ],
                        "example": "monday"
                    },
                    "start_time": {
                        "description": "Hora de início no formato H:i:s (obrigatório, deve ser menor que end_time)",
                        "type": "string",
                        "format": "time",
                        "pattern": "^([01]\\d|2[0-3]):([0-5]\\d):([0-5]\\d)$",
                        "example": "09:00:00"
                    },
                    "end_time": {
                        "description": "Hora de término no formato H:i:s (obrigatório, deve ser maior que start_time)",
                        "type": "string",
                        "format": "time",
                        "pattern": "^([01]\\d|2[0-3]):([0-5]\\d):([0-5]\\d)$",
                        "example": "18:00:00"
                    }
                },
                "type": "object"
            },
            "ServiceRequest": {
                "title": "Request-Body Serviço",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "description": "Nome do serviço (obrigatório)",
                        "type": "string",
                        "maxLength": 100,
                        "example": "Corte de Cabelo Masculino"
                    },
                    "description": {
                        "description": "Descrição detalhada do serviço (opcional)",
                        "type": "string",
                        "maxLength": 2000,
                        "example": "Serviço de corte de cabelo com máquina e tesoura."
                    },
                    "price": {
                        "description": "Preço base do serviço (opcional)",
                        "type": "number",
                        "format": "float",
                        "example": 49.9
                    },
                    "min_price": {
                        "description": "Preço mínimo (opcional)",
                        "type": "number",
                        "format": "float",
                        "example": 40
                    },
                    "max_price": {
                        "description": "Preço máximo (opcional)",
                        "type": "number",
                        "format": "float",
                        "example": 60
                    }
                },
                "type": "object"
            },
            "AddressResponse": {
                "title": "Response-Body Endereço de usuário",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "address": {
                        "type": "string",
                        "example": "Rua das Flores, 123"
                    },
                    "state": {
                        "type": "string",
                        "example": "SP"
                    },
                    "city": {
                        "type": "string",
                        "example": "São Paulo"
                    },
                    "street": {
                        "type": "string",
                        "example": "Rua das Flores"
                    },
                    "neighborhood": {
                        "type": "string",
                        "example": "Jardim das Rosas"
                    },
                    "number": {
                        "type": "string",
                        "example": "123A"
                    },
                    "default": {
                        "type": "boolean",
                        "example": true
                    }
                },
                "type": "object"
            },
            "ProfileResponse": {
                "title": "Response-Body Perfil de usuário",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 123
                    },
                    "name": {
                        "type": "string",
                        "example": "Caio Augusto"
                    },
                    "bio": {
                        "type": "string",
                        "example": "Desenvolvedor backend e entusiasta de tecnologia."
                    },
                    "phone": {
                        "type": "string",
                        "example": "+55 11 00000-5678"
                    },
                    "avatar": {
                        "type": "string",
                        "format": "uri",
                        "example": "https://cdn.exemplo.com/avatars/123.jpg"
                    }
                },
                "type": "object"
            },
            "ScheduleResponse": {
                "title": "Response-Body Disponibilidade",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "123"
                    },
                    "day_of_week": {
                        "type": "string",
                        "example": "monday"
                    },
                    "start_time": {
                        "type": "string",
                        "example": "08:30:00"
                    },
                    "end_time": {
                        "type": "string",
                        "example": "12:30:00"
                    },
                    "available": {
                        "type": "boolean",
                        "example": "false"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date"
                    }
                },
                "type": "object"
            },
            "ServiceResponse": {
                "title": "Response-Body Serviço",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 10
                    },
                    "name": {
                        "type": "string",
                        "example": "Corte Masculino"
                    },
                    "description": {
                        "type": "string",
                        "example": "Serviço de corte de cabelo para homens."
                    },
                    "prices": {
                        "properties": {
                            "price": {
                                "type": "number",
                                "format": "float",
                                "example": 50
                            },
                            "max": {
                                "type": "number",
                                "format": "float",
                                "example": 70
                            },
                            "min": {
                                "type": "number",
                                "format": "float",
                                "example": 30
                            }
                        },
                        "type": "object"
                    },
                    "provider": {
                        "properties": {
                            "id": {
                                "type": "integer",
                                "example": 7
                            },
                            "name": {
                                "type": "string",
                                "example": "Carlos Ferreira"
                            },
                            "username": {
                                "type": "string",
                                "example": "carlos_ferreira"
                            },
                            "bio": {
                                "type": "string",
                                "example": "Barbeiro profissional desde 2010."
                            },
                            "avatar": {
                                "type": "string",
                                "format": "uri",
                                "example": "https://cdn.exemplo.com/avatar.jpg"
                            },
                            "phone": {
                                "type": "string",
                                "example": "+55 11 91234-5678"
                            }
                        },
                        "type": "object"
                    },
                    "address": {
                        "properties": {
                            "id": {
                                "type": "integer",
                                "example": 3
                            },
                            "state": {
                                "type": "string",
                                "example": "SP"
                            },
                            "city": {
                                "type": "string",
                                "example": "São Paulo"
                            },
                            "street": {
                                "type": "string",
                                "example": "Rua das Palmeiras"
                            },
                            "neighborhood": {
                                "type": "string",
                                "example": "Bela Vista"
                            },
                            "number": {
                                "type": "string",
                                "example": "101"
                            },
                            "address": {
                                "type": "string",
                                "example": "Rua das Palmeiras, 101 - Bela Vista, São Paulo - SP"
                            }
                        },
                        "type": "object"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-08-02T15:00:00Z"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-07-30T08:30:00Z"
                    }
                },
                "type": "object"
            },
            "UserResponse": {
                "title": "Response-Body Usuário",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "KairosDev"
                    },
                    "email": {
                        "type": "string",
                        "example": "kairos@example.com"
                    },
                    "profile": {
                        "$ref": "#/components/schemas/ProfileResponse"
                    },
                    "flags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-08-02T15:03:01Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-08-02T15:03:01Z"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Perfil de usuário",
            "description": "Perfil de usuário"
        },
        {
            "name": "Autenticação",
            "description": "Autenticação"
        },
        {
            "name": "Serviços",
